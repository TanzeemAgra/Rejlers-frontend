# Environment Variables Configuration
# Copy this file to .env.local and update values as needed

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# API Configuration
# Development (local)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Production (Railway Backend)
# NEXT_PUBLIC_API_BASE_URL=https://rejlers-backend-production.up.railway.app/api/v1
# NEXT_PUBLIC_WS_URL=wss://rejlers-backend-production.up.railway.app/ws

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER=oauth2
NEXT_PUBLIC_AUTH_CLIENT_ID=your_oauth_client_id
NEXT_PUBLIC_AUTH_REDIRECT_URI=http://localhost:3000/auth/callback
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# OpenAI Configuration - AI Features
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here
NEXT_PUBLIC_OPENAI_MODEL=gpt-4
NEXT_PUBLIC_OPENAI_MAX_TOKENS=2000
OPENAI_API_KEY=your-server-side-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id-optional

# Feature Flags
NEXT_PUBLIC_FEATURE_REALTIME=true
NEXT_PUBLIC_FEATURE_AI=true
NEXT_PUBLIC_FEATURE_MOBILE=true
NEXT_PUBLIC_FEATURE_REPORTING=true

# External Services
NEXT_PUBLIC_MAPS_API_KEY=your_mapbox_or_google_maps_api_key
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Database (if needed for API routes)
DATABASE_URL=postgresql://username:password@localhost:5432/oilgas_db

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Service
EMAIL_FROM=noreply@oilgas.company.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_smtp_user
EMAIL_SMTP_PASSWORD=your_smtp_password

# File Storage
NEXT_PUBLIC_STORAGE_BUCKET=oilgas-assets
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here