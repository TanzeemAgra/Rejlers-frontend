{
  "name": "oil-gas-frontend",
  "version": "1.0.0",
  "description": "Enterprise Oil & Gas Industry Dashboard Frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "cross-env DISABLE_SOURCE_MAPS=true NEXT_TELEMETRY_DISABLED=1 next build",
    "build:vercel": "next build",
    "build:production": "npm install --legacy-peer-deps && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "npx tsc --noEmit",
    "type-check:skip": "echo 'Skipping type check in production build'",
    "format": "prettier --write .",
    "test": "echo \"No tests specified\" && exit 0",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "build:analyze": "npm run build && npm run analyze",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "clean": "rm -rf .next out node_modules/.cache",
    "postinstall": "echo 'Install complete - skipping type check for deployment compatibility'"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-virtual": "^3.0.0-beta.60",
    "axios": "^1.5.1",
    "chart.js": "^4.4.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.292.0",
    "next": "^14.2.33",
    "next-auth": "^4.24.4",
    "openai": "^4.19.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "react-select": "^5.8.0",
    "react-table": "^7.8.0",
    "recharts": "^2.8.0",
    "socket.io-client": "^4.7.2",
    "web-vitals": "^3.5.0",
    "yup": "^1.3.3",
    "cross-env": "^10.1.0",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.33",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tsx": "^4.20.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
